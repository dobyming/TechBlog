{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./built",
    "allowJs": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": "./src",
    "paths": {
      "components/*": ["./components/*"],
      "utils/*": ["./utils/*"],
      "hooks/*": ["./hooks/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*.tsx","src/**/*.js","src/**/*.ts","src/custom.d.ts","src/types/PostItem.types.ts"],
  "exclude": ["node_modules"]
}